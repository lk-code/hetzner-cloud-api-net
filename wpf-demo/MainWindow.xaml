                        IsReadOnly="True">

                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Id}" Header="Id" />
                            <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
                        </DataGrid.Columns>

                    </DataGrid>

                </Grid>

            </TabItem>

            <TabItem Header="Actions">

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ScrollViewer
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="0">

                        <StackPanel Orientation="Vertical">

                            <Button
                                Margin="5,5,5,5"
                                Click="GetAllActionsButton_Click"
                                Content="GetAsync" />

                            <Button
                                Margin="5,5,5,5"
                                Click="GetOneActionButton_Click"
                                Content="GetAsync With Id" />

                        </StackPanel>

                    </ScrollViewer>

                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="1"
                        Orientation="Horizontal">

                        <Button
                            x:Name="ActionsDataGridLastPageButton"
                            Margin="5,5,5,5"
                            Click="ActionDataGridLastPageButton_Clicked"
                            Content="&lt;"
                            IsEnabled="False" />

                        <TextBlock
                            x:Name="ActionsDataGridCurrentPageTextBlock"
                            Margin="5,10,5,10"
                            FontSize="16"
                            Text="0" />

                        <TextBlock
                            Margin="5,10,5,10"
                            FontSize="16"
                            Text="/" />

                        <TextBlock
                            x:Name="ActionsDataGridMaxPageTextBlock"
                            Margin="5,10,5,10"
                            FontSize="16"
                            Text="0" />

                        <Button
                            x:Name="ActionsDataGridNextPageButton"
                            Margin="5,5,5,5"
                            Click="ActionsDataGridNextPageButton_Clicked"
                            Content="&gt;"
                            IsEnabled="False" />

                    </StackPanel>

                    <DataGrid
                        x:Name="ActionsDataGrid"
                        Grid.Row="1"
                        Grid.Column="1"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        IsReadOnly="True">

                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Id}" Header="Id" />
                            <DataGridTextColumn Binding="{Binding Command}" Header="Command" />
                            <DataGridTextColumn Binding="{Binding Status}" Header="Status" />
                            <DataGridTextColumn Binding="{Binding Progress}" Header="Progress" />
                            <DataGridTextColumn Binding="{Binding Started, StringFormat=\{0:dd.MM.yy HH:mm:ss\}}" Header="Started" />
                            <DataGridTextColumn Binding="{Binding Finished, StringFormat=\{0:dd.MM.yy HH:mm:ss\}}" Header="Finished" />
                        </DataGrid.Columns>

                    </DataGrid>

                </Grid>

            </TabItem>

        </TabControl>

        <TextBox
            x:Name="Log"
            Grid.Row="2"
            Margin="5,5,5,5"
            HorizontalScrollBarVisibility="Visible"
            IsReadOnly="True"
            VerticalScrollBarVisibility="Visible" />

    </Grid>

</Controls:MetroWindow>