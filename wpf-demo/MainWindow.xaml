<Controls:MetroWindow
    x:Class="wpf_demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:wpf_demo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Hetzner Cloud API .NET Demo"
    Width="1000"
    Height="800"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="36" />
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">

            <TextBlock
                Margin="5,5,5,5"
                FontSize="16"
                FontWeight="SemiBold"
                Text="API-Token:" />

            <TextBox
                x:Name="ApiTokenTextBox"
                Width="500"
                Margin="5,5,5,5"
                TextChanged="ApiTokenTextBox_TextChanged" />

            <Button
                x:Name="ApiTokenLoadButton"
                Margin="5,5,5,5"
                Click="ApiTokenLoadButton_Clicked"
                Content="load" />

        </StackPanel>

        <TabControl x:Name="MainTabControl" Grid.Row="1">

            <TabItem Header="Server">

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <ScrollViewer
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="0">

                        <StackPanel Orientation="Vertical">

                            <Button
                                Margin="5,5,5,5"
                                Click="GetAllButton_Click"
                                Content="GetAsync" />

                            <Button
                                Margin="5,5,5,5"
                                Click="GetOneButton_Click"
                                Content="GetAsync With Id" />

                            <Button
                                Margin="5,5,5,5"
                                Click="GetAllServerWithFilter_Click"
                                Content="GetAsync With Filter" />

                            <Button
                                Margin="5,5,5,5"
                                Click="RebuildFromImageButton_Click"
                                Content="RebuildFromImage" />

                            <Button
                                Margin="5,5,5,5"
                                Click="SaveAsyncButton_Click"
                                Content="SaveAsync" />

                        </StackPanel>

                    </ScrollViewer>

                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="1"
                        Orientation="Horizontal">

                        <Button
                            x:Name="ServerDataGridLastPageButton"
                            Margin="5,5,5,5"
                            Click="ServerDataGridLastPageButton_Clicked"
                            Content="&lt;"
                            IsEnabled="False" />

                        <TextBlock
                            x:Name="ServerDataGridCurrentPageTextBlock"
                            Margin="5,10,5,10"
                            FontSize="16"
                            Text="0" />

                        <TextBlock
                            Margin="5,10,5,10"
                            FontSize="16"
                            Text="/" />

                        <TextBlock
                            x:Name="ServerDataGridMaxPageTextBlock"
                            Margin="5,10,5,10"
                            FontSize="16"
                            Text="0" />

                        <Button
                            x:Name="ServerDataGridNextPageButton"
                            Margin="5,5,5,5"
                            Click="ServerDataGridNextPageButton_Clicked"
                            Content="&gt;"
                            IsEnabled="False" />

                    </StackPanel>

                    <DataGrid
                        x:Name="ServerDataGrid"
                        Grid.Row="1"
                        Grid.Column="1"
                        AutoGenerateColumns="False"
                        CanUserAddRows="False"
                        IsReadOnly="True"
                        SelectionChanged="ServerDataGrid_SelectionChanged">

                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Id}" Header="Id" />
                            <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
                            <DataGridTextColumn Binding="{Binding Status}" Header="Status" />
                        </DataGrid.Columns>

                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem
                                    Click="ServerShutdownContextMenu_Click"
                                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                                    Header="Shutdown" />
                                <MenuItem
                                    Click="ServerPowerOnContextMenu_Click"
                                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                                    Header="PowerOn" />
                                <MenuItem
                                    Click="ServerPowerOffContextMenu_Click"
                                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                                    Header="PowerOff" />
                                <MenuItem
                                    Click="ServerRebootContextMenu_Click"
                                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                                    Header="Reboot" />
                                <MenuItem
                                    Click="ServerResetContextMenu_Click"
                                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                                    Header="Reset" />
                                <MenuItem
                                    Click="ServerResetPasswordContextMenu_Click"
                                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                                    Header="Reset Password" />
                                <MenuItem
                                    Click="ServerResetPasswordContextMenu_Click"
                                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                                    Header="Reset Password" />
                                <Separator />
                                <MenuItem
                                    Click="ServerChangeNameContextMenu_Click"
                                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                                    Header="Change Name" />
                                <MenuItem
                                    Click="ServerCreateImageBackupContextMenu_Click"
                                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                                    Header="Create Image Backup" />
                                <MenuItem
                                    Click="ServerCreateImageSnapshotContextMenu_Click"
                                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                                    Header="Create Image Snapshot" />
                                <Separator />
                                <MenuItem
                                    Click="ServerCpuMetricsContextMenu_Click"
                                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                                    Header="Get CPU Metrics" />
                                <MenuItem
                                    Click="ServerDiskMetricsContextMenu_Click"
                                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                                    Header="Get Disk Metrics" />
                                <MenuItem
                                    Click="ServerNetworkMetricsContextMenu_Click"
                                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                                    Header="Get Network Metrics" />
                                <Separator />
                                <MenuItem
                                    Click="ServerConsoleContextMenu_Click"
                                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Parent}"
                                    Header="Get Console" />
                            </ContextMenu>
                        </DataGrid.ContextMenu>

                    </DataGrid>

                </Grid>

