                                <Controls:DataGridNumericUpDownColumn
                                    Binding="{Binding Prices[2].PriceMontly.Gross}"
                                    Header="m gross"
                                    IsReadOnly="True" />
                            </DataGrid.Columns>

                        </DataGrid>
                    </Grid>

                </Grid>

